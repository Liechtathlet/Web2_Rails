$('#notice').hide();

$('#cart').html("<%= escape_javascript render(@cart) %>");

if ($('#cart .list-group-item').length == 2) {
	$('#cart').show('fade', 1000); 
}else{
	 if ($('#cart .list-group-item').length < 2) {
	 	$('#cart').hide();
	 }else{
	 	$('#current_item').css({'background-color':'#428BCA'}).animate({'background-color':'#FFFFFF'}, 1000);
	 }
}

