<% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %> alert-dismissable">
    	  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    	  <strong><%= value %></strong>
    </div>
<% end %>

